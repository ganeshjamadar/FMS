# ──────────────────────────────────────────────
# FundManager Environment Variables
# Copy to .env and adjust values as needed
# ──────────────────────────────────────────────

# Database (PostgreSQL 16)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=fundmanager
POSTGRES_PASSWORD=dev_password_123
POSTGRES_DB=fundmanager

# Connection strings per service (override for production)
ConnectionStrings__IdentityDb=Host=localhost;Port=5432;Database=fundmanager;Username=fundmanager;Password=dev_password_123;Search Path=identity
ConnectionStrings__FundAdminDb=Host=localhost;Port=5432;Database=fundmanager;Username=fundmanager;Password=dev_password_123;Search Path=fundadmin
ConnectionStrings__ContributionsDb=Host=localhost;Port=5432;Database=fundmanager;Username=fundmanager;Password=dev_password_123;Search Path=contributions
ConnectionStrings__LoansDb=Host=localhost;Port=5432;Database=fundmanager;Username=fundmanager;Password=dev_password_123;Search Path=loans
ConnectionStrings__DissolutionDb=Host=localhost;Port=5432;Database=fundmanager;Username=fundmanager;Password=dev_password_123;Search Path=dissolution
ConnectionStrings__NotificationsDb=Host=localhost;Port=5432;Database=fundmanager;Username=fundmanager;Password=dev_password_123;Search Path=notifications
ConnectionStrings__AuditDb=Host=localhost;Port=5432;Database=fundmanager;Username=fundmanager;Password=dev_password_123;Search Path=audit

# RabbitMQ
RabbitMQ__Host=localhost
RabbitMQ__Port=5672
RabbitMQ__Username=guest
RabbitMQ__Password=guest

# Redis
Redis__ConnectionString=localhost:6379

# JWT Authentication
Jwt__Secret=CHANGE_ME_TO_A_256_BIT_SECRET_KEY_MINIMUM_32_CHARS
Jwt__ExpiryHours=24
Jwt__Issuer=FundManager

# Service Ports
Identity__Port=5001
FundAdmin__Port=5002
Contributions__Port=5003
Loans__Port=5004
Dissolution__Port=5005
Notifications__Port=5006
Audit__Port=5007
Gateway__Port=5000

# OpenTelemetry (optional)
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Web App
VITE_API_BASE_URL=http://localhost:5000/api
